{
  "manifest_version": 3,
  "name": "Insightify Chalamandra Pro",
  "version": "2.0.0",
  "description": "Firewall Cognitivo, Mapas Neuronales y Audio Beats con 100% Local AI.",
  "permissions": ["activeTab", "scripting", "storage", "aiLanguageModelOriginTrial"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
