{
  "manifest_version": 3,
  "name": "Insightify Chalamandra",
  "version": "1.0.0",
  "description": "Decodificaci√≥n magistral con IA local. Del Caos a la Claridad.",
  "permissions": ["activeTab", "scripting", "storage", "aiAssistant"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
