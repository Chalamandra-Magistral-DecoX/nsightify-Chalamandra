{
  "manifest_version": 3,
  "name": "Insightify Chalamandra",
  "version": "1.0.0",
  "description": "Decodificaci√≥n Magistral SRAP: Firewall, Mapas y Audio Beats con IA Local.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icon128.png",
        "48": "icon128.png",
        "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon128.png",
    "48": "icon128.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
